<UserControl x:Class="BandleTavern.Wpf.Elements.Toolbar.ToolBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BandleTavern.Wpf.Elements.Toolbar"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="800">
    <Grid>
        <StackPanel Orientation="Horizontal">
            <Separator Style="{StaticResource SeperatorToolbar}"/>
            <Button Name="ButtonOptions" Content="Options" Width="100" Style="{StaticResource MainToolbarButton}" Click="ButtonOptions_Click"/>
            <Separator Style="{StaticResource SeperatorToolbar}"/>
        </StackPanel>
    </Grid>
</UserControl>
